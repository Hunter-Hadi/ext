{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2019"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es2018",
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "baseUrl": "./",
    "types": [
      "esbuild-style-plugin"
    ],
    "skipLibCheck": true
  }
}
