{
  "name": "EzMail.AI - ChatGPT for Gmail",
  "short_name": "EzMail.AI",
  "description": "Free Gmail tool that generates entire emails, powered by ChatGPT.",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.ts"
  },
  "content_scripts": [
    {
      "matches": [
       "https://*/*"
      ],
      "js": ["content.tsx"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://mail.google.com/",
    "https://*.openai.com/*"
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": ["tabs", "scripting", "storage", "management"],
  "action": {
    "default_icon": {
      "16": "assets/icons/ezmail_16_normal.png",
      "24": "assets/icons/ezmail_32_normal.png",
      "32": "assets/icons/ezmail_32_normal.png"
    },
    "default_title": "Tooltip title"
  },
  "icons": {
    "16":  "assets/icons/ezmail_16_normal.png",
    "32":  "assets/icons/ezmail_32_normal.png",
    "48":  "assets/icons/ezmail_48_normal.png",
    "128": "assets/icons/ezmail_128_normal.png"
  }
}
