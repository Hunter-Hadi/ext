{
  "name": "__MSG_name__",
  "version": "1.0.0",
  "short_name": "__MSG_sn__",
  "description": "__MSG_desc__",
  "default_locale": "en",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.ts"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": ["content.tsx"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "https://usechatgpt-main.simplysourcing.net/*"
      ],
      "js": ["check_status.ts"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://*/*"
      ],
      "match_about_blank": true,
      "all_frames": true,
      "js": ["iframe.tsx"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://*.openai.com/*"
  ],
  "options_ui": {
    "page": "pages/options/index.html",
    "open_in_tab": true
  },
  "permissions": ["tabs", "scripting", "storage", "management", "contextMenus", "clipboardRead", "clipboardWrite"],
  "action": {
    "default_icon": {
      "16": "assets/USE_CHAT_GPT_AI/icons/maxai_16_normal.png",
      "24": "assets/USE_CHAT_GPT_AI/icons/maxai_32_normal.png",
      "32": "assets/USE_CHAT_GPT_AI/icons/maxai_32_normal.png"
    },
    "default_title": "MaxAI.me",
    "default_popup": "pages/popup/index.html"
  },
  "icons": {
    "16":  "assets/USE_CHAT_GPT_AI/icons/maxai_16_normal.png",
    "32":  "assets/USE_CHAT_GPT_AI/icons/maxai_32_normal.png",
    "48":  "assets/USE_CHAT_GPT_AI/icons/maxai_48_normal.png",
    "128": "assets/USE_CHAT_GPT_AI/icons/maxai_128_normal.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+J",
        "windows": "Alt+J",
        "linux": "Alt+J",
        "mac": "Command+J"
      },
      "description": "Active MaxAI.me"
    }
  }
}
